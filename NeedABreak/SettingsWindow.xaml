<Controls:MetroWindow x:Class="NeedABreak.SettingsWindow"
					  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					  xmlns:local="clr-namespace:NeedABreak"
					  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
            xmlns:utils="clr-namespace:NeedABreak.Utils"
					  mc:Ignorable="d"
					  Title="Need a break!"
					  Height="16cm"
					  Width="16cm"
					  Background="White"
					  BorderThickness="1"
					  BorderBrush="#00B570"
					  WindowTitleBrush="#00B570"
					  ResizeMode="CanResizeWithGrip"
					  WindowStartupLocation="CenterScreen"
					  TitleForeground="White"
            Tag="{Binding Delay, Mode=TwoWay}"
            MinWidth="15cm"
            MinHeight="15cm">
    <!--remark : it seems that default ResizeBorderThickness is about 1mm wide which makes the selection very difficult. There is no such problem with a classic Window.-->
    <Window.Resources>
        <Style TargetType="TextBlock"
			   BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground"
                    Value="#005B38" />
            <Setter Property="FontSize"
					Value="18" />
            <Setter Property="TextAlignment"
					Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock Text="{utils:TextResource explications}"
				   Grid.Row="0"
				   TextWrapping="Wrap"
				   VerticalAlignment="Top"
                   Margin="10,20" />
        <Grid Margin="20,110">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Grid.Row="0"
					BorderThickness="2"
					BorderBrush="#00B67C"
					Background="#A6E5D1"
					Margin="20"
					MouseEnter="Border_MouseEnter"
					MouseLeave="Border_MouseLeave"
					MouseDown="Border_MouseDown"
					x:Name="Border45">
                <Grid>
                    <TextBlock Text="{utils:TextResource travail_tres_intensif}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="45"
							   FontWeight="Bold"
                               FontSize="60"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{utils:TextResource minutes}"
							   Margin="0,0,0,0"
                               VerticalAlignment="Bottom"/>
                </Grid>
            </Border>
            <Border Grid.Column="1"
                     Grid.Row="0"
					BorderThickness="2"
					BorderBrush="#00B67C"
					Background="#A6E5D1"
					Margin="20"
					MouseEnter="Border_MouseEnter"
					MouseLeave="Border_MouseLeave"
					MouseDown="Border_MouseDown"
					x:Name="Border60">
                <Grid>
                    <TextBlock Text="{utils:TextResource travail_intensif}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="60"
							   FontSize="60"
							   FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{utils:TextResource minutes}"
							   VerticalAlignment="Bottom" />
                </Grid>
            </Border>
            <Border Grid.Column="0"
                     Grid.Row="1"
                    BorderThickness="2"
                    BorderBrush="#00B67C"
                    Background="#A6E5D1"
                    Margin="20"
                    MouseEnter="Border_MouseEnter"
                    MouseLeave="Border_MouseLeave"
                    MouseDown="Border_MouseDown"
                    x:Name="Border90">
                <Grid>
                    <TextBlock Text="{utils:TextResource travail_habituel}" />
                    <TextBlock Text="90"
                               FontSize="60"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{utils:TextResource minutes}"
                               VerticalAlignment="Bottom" />
                </Grid>
            </Border>
            <Border Grid.Column="1"
                     Grid.Row="1"
                    BorderThickness="2"
                    BorderBrush="#00B67C"
                    Background="#A6E5D1"
                    Margin="20"
                    MouseEnter="Border_MouseEnter"
                    MouseLeave="Border_MouseLeave"
                    MouseDown="Border_MouseDown"
                    x:Name="Border120">
                <Grid>
                    <TextBlock Text="{utils:TextResource travail_peu_intensif}" />
                    <TextBlock Text="120"
                               FontSize="60"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{utils:TextResource minutes}"
                               VerticalAlignment="Bottom" />
                </Grid>
            </Border>
        </Grid>

        <Button HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
				BorderThickness="0"
				FontSize="20"
				Width="150"
				Height="50"
				Margin="0,0,20,20"
				Click="CloseButton_Click">
            <TextBlock Text="{utils:TextResource fermer}"
					   Foreground="White" />
        </Button>
    </Grid>
</Controls:MetroWindow>
